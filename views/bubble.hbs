<div class="bg-menu-theme p-5" data-bg-class="bg-menu-theme">
  <canvas id="bubbleChart"></canvas>
</div>

<script>
  
    // Sample data with 10 points
    var data = {
      datasets: [{
        data: [
          { x: 5, y: 10, r: 15 },
          { x: 10, y: 15, r: 25 },
          { x: 15, y: 5, r: 20 },
          { x: 20, y: 8, r: 10 },
          { x: 25, y: 18, r: 30 },
          { x: 30, y: 12, r: 25 },
          { x: 35, y: 7, r: 18 },
          { x: 40, y: 20, r: 22 },
          { x: 45, y: 15, r: 28 },
          { x: 50, y: 10, r: 12 },
        ],
        backgroundColor: 'rgba(75, 192, 192, 0.6)', // Adjust color as needed
      }]
    };

    // Chart configuration
    var options = {
      responsive: true,
      scales: {
        x: {
          type: 'linear',
          position: 'bottom'
        },
        y: {
          type: 'linear',
          position: 'left'
        }
      }
    };

    // Get the canvas element
    var ctx = document.getElementById('bubbleChart').getContext('2d');

    // Create the bubble chart
    var bubbleChart = new Chart(ctx, {
      type: 'bubble',
      data: data,
      options: options
    });
</script>